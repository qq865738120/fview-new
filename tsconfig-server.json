{
  "compilerOptions": {
    "sourceMap": false,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "es2018",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
